{
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "/C",
                    "\"E:/visualstudio/Microsoft Visual Studio/Common7/Tools/VsDevCmd.bat\"",
                    "&&"
                ]
            }
        }
    },
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/std:c++17",
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fo${workspaceFolder}\\bin\\obj\\",
                "/Fe${workspaceFolder}\\bin\\kriv.exe",
                "/Fd${workspaceFolder}\\bin\\kriv.pdb",
                "${workspaceFolder}\\src\\*.cpp",
                "/I${workspaceFolder}\\include",
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
        }
    ],
    "version": "2.0.0"
}