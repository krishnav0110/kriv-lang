{
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "@echo off",
                    "/C",
                    "\"E:/Apps/visualstudio/BuildTools/VC/Auxiliary/Build/vcvarsall.bat\"",
                    "x64",
                    "&&"
                ]
            }
        }
    },
    "tasks": [
        {
            "type": "shell",
            "label": "cmake build",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "ALL_BUILD",
                "--config",
                "Debug"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "C/C++: cl.exe build active project",
            "command": "msbuild",
            "args": [
                "${workspaceFolder}\\build\\${workspaceFolderBasename}.sln",
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}